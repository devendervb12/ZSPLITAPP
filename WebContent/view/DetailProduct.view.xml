<core:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m"
controllerName = "smax.batch26.splitApp.controller.DetailProduct"
		 xmlns:html="http://www.w3.org/1999/xhtml">
	<Page title="Detail of Product">
		<content>
	          <Text text="{ProductID}"/>
	          <Text text="{Name}"/>
	          
		</content>
		<footer>
		  <Bar>
		     <contentLeft>
		          <Button text="Create" press="onCreate"/>
		          <Button text="Update"/>
		          <Button text="Delete"/>
		     </contentLeft>
		  </Bar>
		</footer>
	</Page>
</core:View>